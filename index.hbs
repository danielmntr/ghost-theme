{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The featured header }}
<header class="index-header max-width pure-g">
	<div class="wrapper">
	{{#get "posts" limit="4" filter="featured:true"}}
	{{#foreach posts}}

		<div class="featured-article pure-u-1 {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
			<h2><a href="{{url}}">{{title}}</a></h2>
			<p>{{excerpt}}</p>
		</div>

	{{/foreach}}
	{{/get}}
</div>
</header>

{{!-- The main content area on the homepage --}}
<main class="content max-width" role="main">

	{{! The tag below includes the post loop - partials/loop.hbs }}
	{{> "loop"}}

</main>
