<!doctype html>
<html lang="en">
<head>

  {{! Document settings and metadata }}
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>{{meta_title}}</title>
  <meta name="designer" content="Daniel Monteiro" />
  <meta name="keywords" content="ghost, blog, {{meta_title}}" />

  {{! Robots and Viewport }}
  <meta name="HandheldFriendly" content="True" />
  <meta name="robots" content="index, follow" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  {{! OpenGraph for Facebook }}
  <meta property="og:title" content="{{meta_title}}" />
  <meta property="og:locale" content="en_US" />

  {{! Twitter Card }}
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:title" content="{{meta_title}}" />

  {{! Icons }}
  <link rel="icon" href="{{asset "favicon.ico"}}" />

  {{! Prerendering and Prefetching }}
  {{#if @blog.cover}}
  <link rel="prerender" href="{{@blog.cover}}" />
  <link rel="prefetch" href="{{@blog.cover}}" />
  {{/if}}
  <link rel="dns-prefetch" href="//fonts.googleapis.com/" />

  {{! Scripts and Stylesheets }}
  <link href="https://fonts.googleapis.com/css?family=Merriweather:300,300i,900|Rubik:400,700|Space+Mono:400,700" rel="stylesheet">

  {{! Page-Specific Metadata }}
  {{{block "meta"}}}

  {{ghost_head}}

</head>
<body class="{{body_class}}">

  {{! The blog's top navigation }}
  {{navigation}}

  {{! The body of the page (index/post/page) goes here }}
  {{{body}}}

  <footer id="footer">
    <div>
      <a href="#content" class="arctic_scroll" data-offset="-400">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"><path d="M15.5 12.5c-0.4 0.4-1 0.5-1.6 0l-3.9-3.7-3.9 3.7c-0.5 0.5-1.1 0.4-1.6 0-0.4-0.4-0.4-1.2 0-1.6 0.4-0.4 4.7-4.5 4.7-4.5 0.2-0.2 0.5-0.3 0.8-0.3s0.6 0.1 0.8 0.3c0 0 4.3 4.1 4.7 4.5s0.4 1.2 0 1.6z"/></svg>
      </a>
      <p class="copyright"><span>Made by {{@blog.title}}.</span> <span>Powered by Ghost.</span></p>
    </div>
  </footer>

  {{! jQuery }}
  <script type="text/javascript" src="{{asset "js/jquery-3.1.1.min.js"}}"></script>
  <script type="text/javascript" src="{{asset "js/main.js"}}"></script>
  {{ghost_foot}}

  {{! Webpack assets }}
  <script type="text/javascript" src="{{asset "dist/bundle.js"}}"></script>

</body>
</html>
