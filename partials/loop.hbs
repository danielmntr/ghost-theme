{{!-- Previous/next page links - only displayed on page 2+ --}}
<div class="">
    {{pagination}}
</div>

{{!-- This is the post loop - each post will be output using this markup --}}
  <section class="loop-list pure-g">
  {{#foreach posts}}
  <article class="{{post_class}} loop-article">
    <div class="wrapper">
    <figure class="{{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
      <header>
          <h2><a href="{{url}}">{{title}}</a></h2>
      </header>
      <section>
          <p>{{excerpt words="20"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
      </section>
      <footer>
          <p>
            {{author}}
            {{tags prefix=" on "}}
            <time class="" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
          </p>
      </footer>

    </figure>
    </div>
  </article>
  {{/foreach}}
  </section>

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
