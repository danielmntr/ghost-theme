{{! featured posts}}
<section id="sidebar-feat">
{{#get "posts" limit="3" filter="featured:true"}}
    {{#foreach posts}}
    <article>
        <a href="{{url}}"><h6>{{title}}</h6></a>
        <p>{{excerpt words="15"}}&hellip;</p>
    </article> 
    {{/foreach}}
    {{else}}
{{/get}}
</section>

<section id="sidebar-posts">

<article>
