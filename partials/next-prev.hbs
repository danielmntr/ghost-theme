<section class="next-prev">

    <nav class="nav-reveal">

        {{#prev_post}}
        <a class="prev" href="{{url}}">
            <span class="icon-chevron-thin-left"></span>
            <div>
                <h6>{{title}}</h6>
                <p>by {{#author}}{{name}}{{/author}}</p>
            </div>
        </a>
        {{/prev_post}}

        {{#next_post}}
        <a class="next" href="{{url}}">
            <span class="icon-chevron-thin-right"></span>
            <div>
                <h6>{{title}}</h6>
                <p>by {{#author}}{{name}}{{/author}}</p>
            </div>
        </a>
        {{/next_post}}

    </nav>

</section>