            <span class="hidden">Google+</span>
          </a>
        </section>

        <section class="comments">
          <h4>Comments</h4>
          <div id="disqus_thread"></div>
        </section>

      </div>
    </section>
    <section class="post-related pure-u-1 pure-u-md-1-4">
      <div class="wrapper">
        {{#get "posts" limit="all" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags"}}
          {{#foreach posts}}
              <h6>{{title}}</h6>
              <p>{{excerpt}}</p> 
          {{/foreach}}
        {{/get}}
      </div>
    </section>

  </article>

</main>

