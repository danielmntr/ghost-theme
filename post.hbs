{{!< default}}
{{!-- The comment above "< default" means - insert everything in this file into the {{{body}}} of the default.hbs
template, containing the blog header/footer. --}}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<header class="post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
<figure class="post-head-wrap">
  <div class="post-title-wrap">
    <h1 class="post-title">{{title}}</h1>
    <a href="#scroll-to-text" id="scroll-to-text" class="arctic_scroll" data-offset="-300">
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 20 20"><path d="M4.5 7.5c0.4-0.4 1-0.5 1.6 0l3.9 3.7 3.9-3.7c0.5-0.5 1.1-0.4 1.6 0 0.4 0.4 0.4 1.2 0 1.6-0.4 0.4-4.7 4.5-4.7 4.5-0.2 0.2-0.5 0.3-0.8 0.3s-0.6-0.1-0.8-0.3c0 0-4.3-4.1-4.7-4.5s-0.4-1.2 0-1.6z"/></svg>
    </a>
  </div>
</figure>
</header>

<main id="content" class="content max-width" role="main">
  
  <article class="{{post_class}} pure-g">
    
    <section class="post-meta pure-u-1 pure-u-md-1-4">
      <div class="wrapper">
        <p>by {{author}}</p>
        <p>
          <time class="post-date" datetime="{{date format=" YYYY-MM-DD "}}">{{date format="DD MMMM YYYY"}}<br/>({{date published_at timeago="true"}})</time>
        </p>
        <p><span class="tag-prefix">/</span> {{tags separator="<span class='tag-prefix'><br>/ </span>"}}</p>
      </div>
    </section>

    <section class="post-content pure-u-1 pure-u-md-1-2">
      <div class="wrapper">

        <section class="output">

          
          {{! Outputs the post content}}
          {{content}}
        </section>

        <section class="share">
          <h4>Share this article</h4>
          <a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute=" true "}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
